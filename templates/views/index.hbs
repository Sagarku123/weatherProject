<!DOCTYPE html>
<html lang="en">
{{>header}}
<body>
    {{>navbar}}

    <!-- main Header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-md-12 mx-auto">
                <div class="row">
                    <!-- left main header -->
                    <div class="col-md-6 col-12 main_header_left">
                        <p>Welcome to weather app</p>
                         <h1>Get The Latest<span class="text_color"> Weather </span>Info For Your City</h1> 
                         <a href="/weather"><button class="btn btn-success">Check Now</button></a>  
                    </div>
                    <!-- right main header -->
                    <div class="col-md-6 col-12 main_header_right">
                        <div id="carouselExample" class="carousel slide">
                            <div class="carousel-inner">
                              <div class="carousel-item active">
                                <img src="images/weather1.jpg" class="d-block w-100" alt="First Slide">
                              </div>
                              <div class="carousel-item">
                                <img src="images/weather2.jpg" class="d-block w-100" alt="Second Slide">
                              </div>
                              <div class="carousel-item">
                                <img src="images/weather3.jpg" class="d-block w-100" alt="Third Slide">
                              </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Next</span>
                            </button>
                          </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer code -->
     {{>footer}}
</body>
</html>